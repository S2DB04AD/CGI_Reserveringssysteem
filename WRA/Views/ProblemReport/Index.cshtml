@model WRA.Models.ProblemModel;
@{
    ViewData["Title"] = "Probleem melden";
}

<html>
    <body>
        <span class="badge badge-light border" style="width:100%;height:100%;font-size:30px">Meld hieronder het probleem</span>

<form>
    <div class="form-group">
        <label for="formGroupExampleInput">Probleem:</label>
        <input asp-for="Problem" type="text" class="form-control" style="height:400%" id="formGroupExampleInput" placeholder="Voer probleem hier in...">
        <label for="formGroupExampleInput">Ruimte:</label>
        <input asp-for="Space" type="text" class="form-control" style="height:400%" id="formGroupInput" placeholder="Voer ruimte hier in...">
    </div>
    <button type="submit" value="btnMelden" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Probleem Melden</button>
</form>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Probleem melden</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Het probleem is gemeld!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div>
    @TempData["buttonVal"]
</div>
    </body>
</html>
