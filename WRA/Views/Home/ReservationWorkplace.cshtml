@model WRA.Models.WorkareaModel

@{
    ViewData["Title"] = "ReservationWorkplace";
}

<h1>Aanmaken reservering</h1>

<h4>Reserveren werkruimte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="indexWorkPlace">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
@*            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label">Nummer</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accessories" class="control-label">Accessoires</label>
                <input asp-for="Accessories" class="form-control" />
                <span asp-validation-for="Accessories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountPeople" class="control-label">Hoeveelheid personen</label>
                <input asp-for="AmountPeople" class="form-control" />
                <span asp-validation-for="AmountPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Reserveren" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexWorkplace">Terug naar reserveren</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
