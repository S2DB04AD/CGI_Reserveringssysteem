@model IEnumerable<WRA.Models.ReservationModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Reservering Overzicht</h1>

<p>
    <a asp-action="ReservationCreate">Aanmaken nieuwe reservering</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.ResDate)*@
                Datum van reserveren
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Used)*@
                Wordt gebruikt?
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.AmountPeople)*@
                Aantal personen
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.StartTime)*@
                Starttijd
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.EndTime)*@
                Eindtijd
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.RoomNr)*@
                Nummer van ruimte/plek
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ResDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Used)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountPeople)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNr)
            </td>
        </tr>
}
    </tbody>
</table>
